pipeline {
    agent any

    tools {
        jdk 'jdk17'
    }

    options {
        buildDiscarder(logRotator(numToKeepStr: '10'))
    }

    environment {
        EQUINO_MAVEN_CREDENTIALS = credentials('EquinoReposilite')
        ORG_GRADLE_PROJECT_equinoMaven_username = "${EQUINO_MAVEN_CREDENTIALS_USR}"
        ORG_GRADLE_PROJECT_equinoMaven_password = "${EQUINO_MAVEN_CREDENTIALS_PSW}"
    }

    stages {

        stage('Check release readiness') {
            steps {
                sh 'printenv'
                sh 'git branch -m ${CHANGE_BRANCH}'
                sh './gradlew --no-daemon --stacktrace verifyRelease'
            }
        }

        stage('Build') {
            steps {
                sh './gradlew --no-daemon --stacktrace clean build test'
                script {
                    currentBuild.displayName = readFile file: 'build/ovh.equino.version/currentVersion'
                }
            }
        }

        stage('Publish') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'EquinoReposilite', usernameVariable: 'USERNAME', passwordVariable: 'PASSWORD')]) {
                    sh './gradlew --no-daemon --stacktrace publish -x build -x jar -PequinoMaven_username=${USERNAME} -PequinoMaven_password=${PASSWORD} -PequinoMaven_url=https://reposilite.cloud.equino.ovh/equinoSnapshot'
                }
            }
        }

    }

    post {
        cleanup {
            deleteDir()
        }
    }
}